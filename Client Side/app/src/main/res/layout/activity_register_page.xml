<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Space
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="0dp"
        />

    <ScrollView
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="35dp"
            android:orientation="vertical"
            tools:context=".LoginPage">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:id="@+id/tv_Login_Header"
                android:fontFamily="@font/myriadhebrewbold"
                android:text="הרשמה"
                android:textColor="#000000"
                android:textSize="40sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginVertical="40dp"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_Register_Username"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    android:background="@drawable/edit_text_background"
                    android:textSize="25sp"
                    android:textColorHint="#7A7A7A"
                    android:hint="@string/username"
                    android:textAlignment="viewEnd"
                    android:inputType="text"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                    android:maxLength="20"
                    android:bufferType="editable"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:id="@+id/et_Register_password"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    android:background="@drawable/edit_text_background"
                    android:textSize="25sp"
                    android:textColorHint="#7A7A7A"
                    android:hint="@string/password"
                    android:textAlignment="viewEnd"
                    android:maxLength="32"
                    android:inputType="textPassword"
                    android:bufferType="editable"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:id="@+id/et_Register_repeat_password"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    android:background="@drawable/edit_text_background"
                    android:textSize="25sp"
                    android:textColorHint="#7A7A7A"
                    android:hint="@string/repeat_password"
                    android:textAlignment="viewEnd"
                    android:maxLength="20"
                    android:inputType="textPassword"
                    android:bufferType="editable"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:id="@+id/et_Register_private_name"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    android:background="@drawable/edit_text_background"
                    android:textSize="25sp"
                    android:textColorHint="#7A7A7A"
                    android:hint="@string/private_name"
                    android:textAlignment="viewEnd"
                    android:inputType="text"
                    android:maxLength="15"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:bufferType="editable"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:id="@+id/et_Register_last_name"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    android:background="@drawable/edit_text_background"
                    android:textSize="25sp"
                    android:textColorHint="#7A7A7A"
                    android:hint="@string/last_name"
                    android:textAlignment="viewEnd"
                    android:inputType="text"
                    android:maxLength="15"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:bufferType="editable"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:id="@+id/et_Register_email"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    android:background="@drawable/edit_text_background"
                    android:textSize="25sp"
                    android:textColorHint="#7A7A7A"
                    android:hint="@string/email"
                    android:textAlignment="viewEnd"
                    android:inputType="text"
                    android:maxLength="32"
                    android:digits="abcdefghijklmnopqrstuvwxyz0123456789@ABCDEFGHIJKLMNOPQRSTUVWXYZ.com"
                    android:bufferType="editable"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="25dp"
                    >


                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="40dp"
                        android:id="@+id/btn_Register_Date"
                        android:text="בחר"
                        android:fontFamily="@font/heebobold"
                        android:textSize="25sp"
                        android:textColor="#575757"
                        android:background="@drawable/button_n2"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_Register_Birth_Date"
                        android:layout_gravity="center"
                        android:fontFamily="@font/myriadhebrewbold"
                        android:text="תאריך לידה"
                        android:textColor="#000000"
                        android:textSize="25sp"
                        />


                </LinearLayout>


        </LinearLayout>

        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Register"
            android:layout_gravity="center"
            android:text="הירשם"
            android:fontFamily="@font/heebobold"
            android:textSize="40sp"
            android:background="@drawable/button_n1"
            />

    </LinearLayout>
    </ScrollView>
    <Space
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="0dp"
        />
</LinearLayout>